<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
           Our Great Selections of Pizzas!</h1>
           <h4> Try One or Build Your Own</h4>
           <h4> No SignUp needed!</h4>
           <h4> Tickle your tastebuds today!!!</h4>

           <p class="smallTexts"> <i> Only one Pizza per order </i></p>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 mb-5 mt-5"></div>
            <div class="w-100 row makeYourOwnDiv">
                <div class="col-sm-4">
                    <img class="mainImage" style="height: 300px; width:300px;" src="~/images/Pizzas/CreateYourOwn.jfif" />
                </div>
                <div class="col-sm-8 align-items-center">
                    <div style=" margin: 100px 0 20px 0;
                        color:white;"class="align-middle makeYourOwnText">
                        <h3  style="text-align:left;"> Create Your Own Pizza</h3>
                        <p style="text-align:left;"> Make Your Own Pizza with your own style </p>
                        <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="Forms/CustomPizza">Try Now</a> 
                    </div>
                </div>
            </div>

            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "/images/Pizzas/" + (pizza.ImageTitle + ".jfif");
                     <div class="col-4 mb-5">

                               
                        <a class="pizza-image" asp-area="" 
                    asp-route-ImageTitle="@pizza.ImageTitle" 
                    asp-route-PizzaPrice="@pizza.FinalPrice"
                    asp-route-PizzaName="@pizza.PizzaName"
                    asp-page="Checkout/Checkout" > 
                    
                    
                         <img src="@imagePath" class=" imageTile w-100" asp-append-version="true" />
                    
                   </a>
                    <br/>
                </div>
            }

           
        </div>

    </div>
</div>

